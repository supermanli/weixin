.picture_view {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: rgb(250, 255, 255);
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgb(33, 36, 35);
}

/* 头像 */

.userAvatarUrl {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid rgb(122, 158, 236);
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

