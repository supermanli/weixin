page {
  background: #f6f6f6;
}

/*主视图*/

.mainViewClass {
  width: 100%;
}

.main_view {
  background: #f6f6f6;
  flex-direction: row;
  justify-content: flex-start;
}

/* 导航栏 */

.top_view {
  background-color: #233333;
  display: flex;
  flex-direction: row;
  /* width: 100%; */
  height: 75rpx;
}

/*类型选择 默认样式*/

.topTypeListClass {
  display: inline-block;
  margin-top: 12rpx;
  margin-left: 15rpx;
  font-size: 35rpx;
  width: 100rpx;
  height: 100%;
  text-align: center;
  z-index: 99;
  color: rgb(255, 255, 255);
}

/*类型选择 选中样式*/

.curPage {
  animation-fill-mode: forwards;
  color: rgb(122, 158, 236);
  font-size: 35rpx;
}

/* 轮播图 */

swiper {
  width: 100%;
}

swiper-item {
  width: 100%;
}

/*图片大小*/

image {
  width: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent；;
}

.first_scrollview {
  width: 90%;
  height: 100%;
  white-space: nowrap;
}

/*底部按钮*/

.bottom_view {
  display: flex;
  flex-direction: row;
  height: 100rpx;
}

/*头像样式*/

.nick_image {
  overflow: hidden;
  /* display: block; */
  width: 60rpx;
  height: 60rpx;
  /* margin: 20rpx; */
  border-radius: 50%;
  /* border: 2px solid rgb(122, 158, 236); */
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

/*评论列表*/

.list_block {
  /* padding: 5px; */
  margin-top: 5px;
  /* margin-right: 5px; */
  width: 100%;
  font-size: 16px;
  border: 1px solid #dadada;
  border-radius: 10px;
  border-bottom: 1px solid #dadada;
}

/*问题列表*/

.question_title {
  /* background-color: gray; */
  margin-top: 10px;
  margin-left: 7px;
  /* border: 1px solid #dadada; */
}

/*问题内容*/

.question_content {
  margin-top: 5px;
  margin-left: 20px;
  margin-bottom: 5px;
  margin-right: 10px;
}

/*时间*/

.time {
  font-size: 12px;
}

/*新闻图片*/

.news_image {
  overflow: hidden;
  display: block;
  margin-top: 5px;
  margin-left: 2%;
  position: center;
  width: 94%;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
